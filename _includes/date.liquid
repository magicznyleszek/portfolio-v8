{% if page.language == "pl-pl" %}
    {% assign b = page.date | date: "%B" %}
    {% case b %}
        {% when "January" %}
            Styczeń
        {% when "February" %}
            Luty
        {% when "March" %}
            Marzec
        {% when "April" %}
            Kwiecień
        {% when "May" %}
            Maj
        {% when "June" %}
            Czerwiec
        {% when "July" %}
            Lipiec
        {% when "August" %}
            Sierpień
        {% when "September" %}
            Wrzesień
        {% when "October" %}
            Październik
        {% when "November" %}
            Listopad
        {% when "December" %}
            Grudzień
        {% else %}
    {% endcase %}
    {{ page.date | date: "%Y" }}
{% else %}
    {{ page.date | date: "%B %Y" }}
{% endif %}