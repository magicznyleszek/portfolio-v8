{% include html-begin.liquid %}
{% include page-header.liquid %}

    <section class="page-content" role="main">
        
        <h1>{% include helpers/category-icon.liquid category=page.category %} {% include helpers/category-name.liquid category=page.category %}</h1>

        <p class="page-description">{% include helpers/category-description.liquid %}</p>

        <section class="projects-list">
            {% for post in site.posts %}{% if post.categories contains page.category %}{% if post.language == page.language %}{% include modules/project-summary.liquid language=post.language %}{% endif %}{% endif %}{% endfor %}
        </section>

    </section>

{% include page-footer.liquid %}
{% include html-end.liquid %}