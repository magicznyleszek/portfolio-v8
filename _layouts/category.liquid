{% include header.liquid language=page.language %}

    <section class="page-content" role="main">
        
        <h1>{% include category-icon.liquid category=page.category %} {% include category-name.liquid category=page.category language=page.language %}</h1>

        <p class="category-description">{% include category-description.liquid category=page.category language=page.language %}</p>

        <section class="projects-list">
            {% for post in site.posts %}{% if post.categories contains page.category %}{% if post.language == page.language %}{% include project-summary.liquid language=post.language %}{% endif %}{% endif %}{% endfor %}
        </section>

    </section>

{% include footer.liquid %}