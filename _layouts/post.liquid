{% include header.liquid language=page.language %}

    <section class="page-content page-content-single-post" role="main">
        
        <h1>{{ page.title }}{% include post-categories-list.liquid language=page.language categories=page.categories %}</h1>

        {{ content }}

        <footer class="single-post-meta">
            <time datetime="{{ page.date }}"><i class="fa fa-clock-o"></i> {% include date.liquid language=page.language %}</time>
            {% include project-other-language.liquid language=page.language %}
        </footer>

    </section>

{% include footer.liquid %}